{
	"$schema": "https://biomejs.dev/schemas/2.4.3/schema.json",
	"files": {
		"ignoreUnknown": true,
		"include": ["**", "!.next", "!node_modules"]
	},
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noArrayIndexKey": "off"
			},
			"correctness": {
				"noChildrenProp": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useSemanticElements": "warn",
				"useKeyWithClickEvents": "warn"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			}
		},
		"include": ["**", "!node_modules", "!components/ui"]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"lineEnding": "lf",
		"include": ["**", "!node_modules", "!components/ui"]
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"semicolons": "always",
			"trailingCommas": "all"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	}
}
